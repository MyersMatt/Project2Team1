<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.revature.models.items">
    <class name = "StoreItem" table = "store_item">

        <meta attribute = "class-description">
            This class is for our store items and their corresponding information.
        </meta>

        <id name = "itemId" column = "item_id" type = "java.lang.Integer">
            <generator class="native"/>
        </id>
        <property name = "itemName"         column = "item_id"         type = "java.lang.String"/>
        <property name = "itemPrice"         column = "item_price"         type = "java.lang.String"/>
        <property name = "itemQuantity"        column = "item_quantity"       type = "java.lang.String"/>
        <property name = "description"         column = "description"        type = "java.lang.String"/>
    </class>
</hibernate-mapping>