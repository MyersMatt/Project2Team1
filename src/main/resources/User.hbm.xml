<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="models.users">
    <class name = "User" table = "users">

        <meta attribute = "class-description">
            This class contains the registered user details.
        </meta>

        <id name = "id" column = "user_id" type = "java.lang.Integer">
            <generator class="native"/>
        </id>
        <property name = "username"         column = "username"         type = "java.lang.String"/>
        <property name = "password"         column = "password"         type = "java.lang.String"/>
        <property name = "firstName"        column = "first_name"       type = "java.lang.String"/>
        <property name = "lastName"         column = "last_name"        type = "java.lang.String"/>
        <property name = "email"            column = "email"            type = "java.lang.String"/>
        <property name = "shippingAddress"  column = "shipping_address" type = "java.lang.String"/>
        <property name = "paymentInfo"      column = "payment_info"     type = "java.lang.String"/>

    </class>
</hibernate-mapping>